    <bean id="projectExceptionHandlingAdvice" class="com.hsuforum.easjavatemplate.exception.ProjectExceptionHandlingAdvice"/>
    
    <!-- logicContext: codegen begin -->
    <!-- logicContext: codegen end -->
    <aop:config>
        <aop:pointcut id="dbOperation1" expression="execution(* com.hsuforum..*Service.*(..))"/>
